<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mattihew.Main">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
                <GridPane fx:id="issueContainer" gridLinesVisible="true" prefHeight="200.0" >
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="75.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="150.0" maxWidth="150" prefWidth="150.0" />
                    </columnConstraints>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem fx:id="mnuAdd" mnemonicParsing="false" onAction="#addNewIssue" text="Add Issue">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                    <graphic>
                                        <Label text="âž•" textFill="#000000" />
                                    </graphic>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" onAction="#clearIssues" text="Clear Issues">
                                    <graphic>
                                        <Label text="ðŸ—‘" textFill="#000000" />
                                    </graphic>
                                </MenuItem>
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" text="Close" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Control">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#stopTracking" text="Stop">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                    <graphic>
                                        <Label text="â¹" textFill="#000000" />
                                    </graphic>
                                </MenuItem>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar>
                    <items>
                        <Button fx:id="BtnAdd" mnemonicParsing="false" onAction="#addNewIssue" text="âž•" />
                        <Button fx:id="btnStop" mnemonicParsing="false" onAction="#stopTracking" text="â¹" />
                        <Button mnemonicParsing="false" onAction="#clearIssues" text="ðŸ—‘" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Separator prefWidth="200.0" />
                <ToolBar>
                    <items>
                        <Label text="Task 1" visible="false" />
                        <ProgressBar progress="0.0" visible="false" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </bottom>
</BorderPane>
